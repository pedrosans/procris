import argparse

parser = argparse.ArgumentParser()
commands_parser = parser.add_subparsers(help='procris sub-commands help', dest='action')
commands_parser.add_parser('start',	 help='Start procris service')
commands_parser.add_parser('stop',	 help='Stop the running procris service if any')
commands_parser.add_parser('status', help='Show the status of procris service')
parser.add_argument('-c', required=False)

args = parser.parse_args()

if args.action == 'start':
	import procris.service
	procris.service.load()
	procris.service.start()
elif args.action == 'stop':
	import procris.remote as remote
	proxy = remote.get_proxy()
	if proxy:
		proxy.stop_running_instance()
		print("Remote instance were stopped")
	else:
		print("procris is not running")
elif args.action == 'status':
	import procris.remote as remote
	proxy = remote.get_proxy()
	if proxy:
		print("Active, pid: " + proxy.get_running_instance_id())
	else:
		print("Inactive")
elif args.c:
	import procris.service
	import procris.names as names
	procris.service.load()
	procris.service._pre_processing()
	c_in = names.CommandLine(text=args.c).parse()
	name = names.match(c_in)
	message = name.function(c_in)
	if message:
		procris.service.messages.add(message)
	procris.service.messages.print_to_console()
else:
	parser.print_help()
